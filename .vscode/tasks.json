{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Frontend: pnpm dev:antd",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "dev:antd"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "local:",
          "endsPattern": "ready in"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      }
    },
    {
      "label": "Backend: uvicorn (FastAPI)",
      "type": "shell",
      "command": "uvicorn",
      "args": ["app.main:app", "--reload", "--port", "8000"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Uvicorn running on",
          "endsPattern": "Application startup complete"
        }
      },
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    },
    {
      "label": "Start Frontend and Backend",
      "dependsOn": [
        "Frontend: pnpm dev:antd",
        "Backend: uvicorn (FastAPI)"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
