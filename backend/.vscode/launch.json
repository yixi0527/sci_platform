{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI Debug (with reload)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--port", "8000"
      ],
      "jinja": true,
      "console": "integratedTerminal",
      "subProcess": true
    },
    {
      "name": "Run Integration Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/tests/test_integration.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
